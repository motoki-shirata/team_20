<h2>コメント一覧</h2>
<% @task_comments.each do |c| %>
  <div>
    <a href="/users/<%= @parent_task.user.id %>"><%= c.user.email %></a>
    <%= c.content %>
    <hr>
  </div>
<% end %>

<%= form_for [@post, @comment] do |f| %>
  <%= f.text_field :content %>
  <br>
  <%= f.submit 'コメントする' %>
<% end %>