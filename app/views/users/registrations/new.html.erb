<%= stylesheet_link_tag "background-image", :media => "all" %>

<div class="text-center">
  <h2 class="font-italic">Sign up</h2>
</div>

<div class="container text-center">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group input-group col-6 mx-auto">
    <div class="input-group-prepend">
      <span class="input-group-text"><i class="fa fa-user"></i></span>
    </div>
    <input class="form-control" autofocus="autofocus" name="user[name]" placeholder="Full name" type="text" id="user_name">
  </div>

  <div class="form-group input-group col-6 mx-auto">
    <div class="input-group-prepend">
      <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
    </div>
    <input class="form-control" autofocus="autofocus" name="user[email]" placeholder="Email address" type="email" id="user_email">
  </div>

  <div class="form-group input-group col-6 mx-auto">
    <div class="input-group-prepend">
      <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
    </div>
    <input class="form-control" autocomplete="new-password" name="user[password]" placeholder="Password (6 characters minimum)" type="password" id="user_password">
  </div>

  <div class="form-group input-group col-6 mx-auto">
    <div class="input-group-prepend">
      <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
    </div>
    <input class="form-control" autocomplete="new-password" name="user[password_confirmation]" placeholder="Password confirmation" type="password" id="user_password_confirmation">
  </div>


  <div>
    <%= f.label :team_id %>
    <%= f.collection_select :team_id, Team.all, :id, :name, :prompt => "チームを選択" %>
  </div>
  
  <div class="actions btn btn-md btn-rounded btn-block form-control">
    <%= f.submit "Sign up", class: "btn btn-light" %>
  </div>

  
<% end %>

  <div class="text-center line-height-base">
    or
  </div>

  <div class="text-center">
    <button onclick="location.href='/users/sign_in'", class="btn btn-light">Login</button>
  </div>
</div>


