<%= stylesheet_link_tag "common", :media => "all" %>

<div class="center jumbotron mt-4">
  <div class="text-center">
    <h1 class="text-white">Welcome to the FUN&FUN&FUN</h1>
  </div>
  <% if user_signed_in?%>
    Signed in as User
  <% elsif boss_signed_in? %>
    Signed in as Boss
  <%else %>
    <div class="container text-center">
      <%= link_to "User Login / Sign up", new_user_session_path, class: 'btn btn-lg btn-primary btn-block' %>
    </div>
    <br>
    <div class="container text-center">
      <%= link_to "Boss Login / Sign up", new_boss_session_path, class: 'btn btn-lg btn-secondary btn-block' %>
    </div>
  <% end %>
</div>
