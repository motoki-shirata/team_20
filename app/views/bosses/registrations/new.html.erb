<%= stylesheet_link_tag "background-image", :media => "all" %>

<div class="text-center">
  <h1 class="font-italic">Sign up</h1>
</div>

<div class="container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group input-group col-6 mx-auto">
    <div class="input-group-prepend">
      <span class="input-group-text"><i class="fa fa-user"></i></span>
    </div>
    <input class="form-control" autofocus="autofocus" name="boss[name]" placeholder="Full name" type="text" id="boss_name">
  </div>

  <div class="form-group input-group col-6 mx-auto">
    <div class="input-group-prepend">
      <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
    </div>
    <input class="form-control" autofocus="autofocus" name="boss[email]" placeholder="Email address" type="email" id="boss_email">
  </div>

  <div class="form-group input-group col-6 mx-auto">
    <div class="input-group-prepend">
      <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
    </div>
    <input class="form-control" autocomplete="new-password" name="boss[password]" placeholder="Password (6 characters minimum)" type="password" id="boss_password">
  </div>

  <div class="form-group input-group col-6 mx-auto">
    <div class="input-group-prepend">
      <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
    </div>
    <input class="form-control" autocomplete="new-password" name="boss[password_confirmation]" placeholder="Password confirmation" type="password" id="boss_password_confirmation">
  </div>

