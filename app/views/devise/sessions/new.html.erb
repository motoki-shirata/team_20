<%= stylesheet_link_tag "background-image", :media => "all" %>

<div class="text-center">
  <h2 class="font-italic">Log in</h2>
</div>

<div class="container">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="form-group input-group">
    <div class="input-group-prepend">
      <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
    </div>
    <input class="form-control" autofocus="autofocus" name="user[email]" placeholder="Email address" type="email" id="user_email">
  </div>

  <div class="form-group input-group">
    <div class="input-group-prepend">
      <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
    </div>
    <input class="form-control" autocomplete="current-password" name="user[password]" placeholder="Password" type="password" id="user_password">
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
