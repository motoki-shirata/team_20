<div class="text-center">
  <h2 class="font-italic">Sign up</h2>
</div>

<div class="container">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group input-group">
    <div class="input-group-prepend">
      <span class="input-group-text"><i class="fa fa-user"></i></span>
    </div>
    <div class="form-control">
      <%= f.text_field :name, autofocus: true, placeholder: "name" %>
    </div>
  </div>

  <div class="form-group input-group">
    <div class="input-group-prepend">
      <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
    </div>
    <div class="form-control">
      <%= f.email_field :email, autofocus: true, placeholder: "email" %>
    </div>
  </div>

  # チーム名を入れる。理想ドロップダウンで所属部署を入れる

  <div class="form-group input-group">
    <div class="input-group-prepend">
      <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
    </div>
    <div class="form-control">
      <%= f.label :password %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
  </div>

  <div class="form-group input-group">
    <div class="input-group-prepend">
      <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
    </div>
    <div class="form-control">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
  </div>

  <div class="actions btn btn-md btn-rounded btn-block form-control">
    <%= f.submit "Sign up", class: "btn btn-danger" %>
  </div>

  
<% end %>

  <div class="text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>


